
<div class="container">
  <div class="row">
		<div class="col-sm-12 col-md-5 col-lg-4">
			<div class="col-md-12 col-lg-12 featured-article" style="padding-left:0px; padding-right:0px" >
        <% if @article_first.thum.present? %>
          <%= link_to article_path(@article_first) do %>
            <%= image_tag article.thum, width: 260, height: 125 %>
          <% end %>
        <% else %>
          <%= link_to article_path(@article_first) do %>
            <img class="media-object" src="http://d-kamiichi.com/wp-content/uploads/2016/05/marvel-ironman-movie-free.jpg" alt="..." width="100%", height="100%">
          <% end %>
        <% end %>
				<div class="block-title">
					<h2><%= @article_first.title %></h2>
				</div>
			</div>
		</div>
		<div class="col-sm-12 col-md-5 col-lg-5">
			<ul class="media-list main-list">
        <% @article_main.each do |article| %>
    			  <li class="media">
              <% if article.thum.present? %>
                <%= link_to article_path(article), class:"pull-left" do %>
                  <%= image_tag article.thum, width: 150, height: 90 %>
                <% end %>
              <% else %>
                <%= link_to article_path(article), class:"pull-left" do %>
                  <img class="media-object" src="http://d-kamiichi.com/wp-content/uploads/2016/05/marvel-ironman-movie-free.jpg" alt="..." width="150", height="90">
                <% end %>
              <% end %>
              <div class="media-body">
    			      <h4 class="media-heading"><%= article.title %></h4>
    			      <p class="by-author">By Hamada</p>
    			    </div>
      			</li>
        <% end %>
			</ul>
		</div>
    <div class="col-sm-12 col-md-2 col-lg-3">
      <a href="https://coincheck.com/?c=huHk3QiSzpI" target="_blank"><img src="https://coincheck.com/images/affiliates/03_cc_banner_250x250.png" alt="ビットコイン取引高日本一の仮想通貨取引所 coincheck bitcoin"></a>
    </div>
	</div>
</div>
<div class="line">
</div>
