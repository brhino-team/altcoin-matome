      <div>
        <% @articles.each do |article| %>
  		    <article>
  		        <div class="row">
  		            <div class="col-sm-6 col-md-4">
                    <% if article.thum.present? %>
                      <%= link_to article_path(article) do %>
                        <%= image_tag article.thum, width: 260, height: 125 %>
                      <% end %>
                    <% else %>
                      <%= link_to article_path(article) do %>
                        <img class="media-object" src="http://d-kamiichi.com/wp-content/uploads/2016/05/marvel-ironman-movie-free.jpg" alt="..." width="260", height="125">
                      <% end %>
                    <% end %>
  		            </div>
  		            <div class="col-sm-6 col-md-8">
  		                <span class="label label-default pull-right"><i class="glyphicon glyphicon-comment"></i>50</span>
                      <%= link_to article_path(article) do %>
  		                  <h4><%= article.title %></h4>
                      <% end %>
                      <p><%== article.body.truncate(60) %></p>
  		                <section>
  		                    <i class="glyphicon glyphicon-folder-open"></i>ジャンル
  		                    <!-- <i class="glyphicon glyphicon-user"></i>Hamada -->
