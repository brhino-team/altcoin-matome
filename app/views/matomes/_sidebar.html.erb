  <% end %>
</div>
  <h3 class="popular">人気記事</h3>
  <div class="contents_s">
    <div class="access_rank_post">
      <div class="side_postlist">
        <div class="navbar-collapse" id="nav_target">
          <!-- <ul class="nav navbar-nav" style="float:initial">
            <li class="active"><a href="#">Daily</a></li>
            <li><a href="#">Weekly</a></li>
            <li><a href="#">Monthly</a></li>
          </ul> -->
          <div id="disp_rank">
            <div class="column">
              <% @articles.first(3).each.with_index(1) do | article, i | %>
                <%= link_to article_path(article), class:"article-title-link" do %>
                    <h4><%= i %>.<%= article.title %></br><i class="glyphicon glyphicon-user"></i><%= article.user_name %></h4>
                  <% end %>
              <% end %>

              <div class="ad_zaif">
                <%= link_to "https://coincheck.com/?c=huHk3QiSzpI", target: "_blank" do%>
                  <%= image_tag("https://s3-ap-northeast-1.amazonaws.com/monokabu/uploads/news/image/2/air-jordan-10-house-of-hoops-1.png", alt: "ビットコイン取引高日本一の仮想通貨取引所 coincheck bitcoin") %>
                <% end %>
              </div>

                <div class="tag">
                  <h3>注目のキーワード</h3>
                  <% @tags.each do | tag | %>
                    <% if tag.articles.present? %>
                      <%= link_to tag.name, tag_matome_path(tag), class:"label label-info" %>
                    <% end %>
                  <% end %>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
